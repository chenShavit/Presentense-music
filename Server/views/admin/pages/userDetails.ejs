<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head %>
</head>

<body>

    <div id="wrapper">
        <nav class="navbar-default navbar-static-side nav-sidebar-container" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element"> <span>
                            <!-- <img alt="image" class="img-circle" src="../admin-images/logo.png" /> -->
                             </span>
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="clear"> <span class="block m-t-xs"> <strong class="font-bold">Presentense</strong>
                             </span> </span> </a>

                        </div>
                        <div class="logo-element">
                            Presentense
                        </div>
                    </li>
                    <li>
                        <a href="dashboard"><i class="fa fa-th-large"></i> <span class="nav-label">נתונים כלליים</span></a>
                    </li>
                    <% if (adminUser.type == 'administrator' ) { %>                        
                    <li class="active">
                        <a href="users"><i class="fa fa-male"></i> <span class="nav-label">משתמשים</span></a>
                    </li>
                    <% } %>
                    <li>
                        <a href="contests"><i class="fa fa-users"></i> <span class="nav-label">תחרויות</span></a>
                    </li>
                    <% if (adminUser.type == 'administrator' ) { %>
                    <li>
                        <a href="adminUsers"><i class="fa fa-suitcase"></i> <span class="nav-label">מנהלים</span></a>
                    </li>
                    <% } %>
                </ul>

            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                    </div>
                </nav>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5 class="pull-right">פרטי המשתמש</h5>
                        </div>
                        <div class="ibox-content">
                            <form method="post" action="/admin/updateLawyer" class="form-horizontal">
                                <input value="<%=user._id%>" name="_id" hidden>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">שם משתמש</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="name" value="<%=user.name%>" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">כתובת מייל</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="email" value="<%=user.email%>" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">מגדר</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="gender" value="<%=user.gender%>" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">תאריך לידה</label>
                                    <div class="col-sm-10">
                                        <input type="date" name="birthday" value="<%=user.birthday%>" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">עיר</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="city" value="<%=user.city%>" class="form-control">
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group">
                                    <div class="col-sm-4 col-sm-offset-2">
                                        <a data-toggle="modal" class="btn btn-white" href="javascript:history.back()">חזור</a>
                                        <% if (JSON.stringify(user) === JSON.stringify({}) || JSON.stringify(user) === JSON.stringify({"type":2})) { %>
                                            <input type="submit" class="btn btn-primary" value="צור">
                                        <% } else { %>
                                            <input type="submit" class="btn btn-primary" value="שמור">
                                        <% }%>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer">
                <div class="pull-right">
                    <a href="http://moveosoftware.com">moveosoftware.com</a>
                </div>
                <div class="pull-left">
                    <strong>Powered by</strong> Moveo Group
                </div>
            </div>
        </div>

    </div>


</body>

</html>